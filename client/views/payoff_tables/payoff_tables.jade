    div.col-md-6
      h2 Payoff table
      table.table.table-bordered
        thead
          tr
            td
            th Mango
            th Peach
            th Banana
            th Kiwi
        tbody
          tr
            th Blue
            td= blueMango
            td= bluePeach
            td= blueBanana
            td= blueKiwi
          tr
            th Purple
            td= purpleMango
            td= purplePeach
            td= purpleBanana
            td= purpleKiwi
          tr
            th Indigo
            td= indigoMango
            td= indigoPeach
            td= indigoBanana
            td= indigoKiwi
          tr
            th Teal
            td= tealMango
            td= tealPeach
            td= tealBanana
            td= tealKiwi

    div.col-md-6
      h2 Accepted offers
      table.table.table-bordered
        thead
          tr
            th
