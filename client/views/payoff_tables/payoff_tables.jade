            th Indigo
            td
            td
            td
            td
          tr
            th Teal
            td
            td
            td
            td

  each colorToFruitTransfers
    div.modal.fade(id = cssId)
      .modal-dialog
        .modal-content
          .modal-header
            button.close(type="button" data-dismiss="modal")
              span(aria-hidden="true") x
            h4.modal-title Select an offer
          .modal-body
            table.table.table-bordered
              thead
                tr
                  th= youPayTo
                  th Your total payoff
                  th= theirPayoffTitle
                  th= theyPayToYouTitle
                  th
              tbody
                each data
                  tr
                    td= youPay
                    td= yourTotalPayoff
                    td= theirTotalPayoff
                    td= theyPay
                    td
