template(name="payoffTables")
  h1= pageHeader
  div.row
    div.col-md-6
      h2 Payoff table
      table#payoff-table.table.table-bordered
        thead
          tr
            td
            each fruits
              th= this
        tbody
          each payoffs
            tr
              th= colorName
              each data
                td= this

    div.col-md-6
      h2 Accepted offers
      table.table.table-bordered
        thead
          tr
            td
            each fruits
              th= this
        tbody
          each colors
            tr
              th= this
              td
              td
              td
              td

  each possibleTransfers
    div.modal.fade(id = cssId data-other-role = otherRole)
      .modal-dialog
        .modal-content
          .modal-header
            button.close(type="button" data-dismiss="modal")
              span(aria-hidden="true") x
            h4.modal-title Select an offer
          .modal-body
            table.table.table-bordered
              thead
                tr
                  th= youPayTo
                  th Your total payoff
                  th= theirPayoffTitle
                  th= theyPayToYouTitle
                  th
              tbody
                each data
                  tr
                    td.you-pay= youPay
                    td.your-total-payoff= yourTotalPayoff
                    td.their-total-payoff= theirTotalPayoff
                    td.they-pay= theyPay
                    td
                      button.choose.bg-primary select

  +offers
